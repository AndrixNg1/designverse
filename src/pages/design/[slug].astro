---
import Layout from "../../layouts/Layout.astro";
import { designs } from "../../data/designs.js";

// Génération des pages à partir des slugs
export function getStaticPaths() {
  return designs.map((item) => ({
    params: { slug: item.slug },
    props: { design: item },
  }));
}

const { design } = Astro.props;
const secondaryImages = design.secondaryImages || [];
---

<Layout title={design.title}>
  <section class="bg-gray-50">
    <!-- IMAGE PRINCIPALE -->
    <div class="max-w-7xl mx-auto px-6 pt-12">
      <img
        src={design.image}
        alt={design.title}
        class="w-full h-[500px] object-cover rounded-3xl"
      />
    </div>

    <!-- TITRE ET DESCRIPTION -->
    <div class="max-w-5xl mx-auto px-6 py-12 text-center">
      <h1 class="text-5xl font-extrabold text-gray-900 mb-4">{design.title}</h1>
      <p class="text-gray-700 text-lg">{design.description}</p>
    </div>

    <!-- SECTION PRINCIPALE -->
    <div
      class="max-w-7xl mx-auto px-6 grid grid-cols-1 lg:grid-cols-5 gap-12 py-12"
    >
      <!-- ARTICLE DETAILLE -->
      <article
        class="lg:col-span-3 bg-white shadow-md rounded-3xl p-8 space-y-6"
      >
        <h2 class="text-2xl font-bold text-gray-900">Présentation du projet</h2>
        <p class="text-gray-700 leading-relaxed">{design.article}</p>

        <h3 class="text-xl font-semibold text-gray-800 mt-6">Résumé</h3>
        <p class="text-gray-700 leading-relaxed">{design.summary}</p>
      </article>

      <!-- PROFIL + GALERIE -->
      <aside class="lg:col-span-2 flex flex-col gap-8">
        <!-- PROFIL -->
        <div
          class="bg-white shadow-md rounded-3xl p-6 flex flex-col items-start gap-4"
        >
          <div class="flex items-center gap-4">
            <img
              src={design.avatar}
              alt={design.author}
              class="w-20 h-20 rounded-full border-2 border-orange-500 object-cover"
            />
            <div class="flex flex-col">
              <h3 class="text-xl font-bold text-gray-900">{design.author}</h3>
              <p class="text-gray-600 text-sm">Email: {design.email}</p>
              <p class="text-gray-600 text-sm">Tel: {design.phone}</p>
            </div>
          </div>
        </div>

        <!-- IMAGES SECONDAIRES -->
        <div class="bg-white shadow-md rounded-3xl p-6 space-y-4">
          <h4 class="text-lg font-semibold text-gray-900 mb-4">
            Galerie secondaire
          </h4>
          <div class="grid grid-cols-2 gap-4">
            {
              secondaryImages.map((img) => (
                <img
                  src={img}
                  alt="Secondary design image"
                  class="w-full h-32 object-cover rounded-xl hover:scale-105 transition-transform duration-300 cursor-pointer"
                />
              ))
            }
          </div>
        </div>
      </aside>
    </div>
  </section>
</Layout>
