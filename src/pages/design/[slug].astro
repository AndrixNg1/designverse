---
import { designs } from "../../data/designs.js";

const { slug } = Astro.params;
const design = designs.find((d) => d.slug === slug);

if (!design) {
  throw new Error(`Design non trouvé : ${slug}`);
}
---

<html lang="fr">
  <head>
    <title>{design.title} – Détails du projet | CreativeSpace</title>
    <meta name="description" content={`Découvrez le projet "${design.title}" par ${design.author}.`} />
  </head>

  <body class="bg-white text-gray-900">
    <section class="max-w-5xl mx-auto px-6 py-24">
      <div class="mb-12">
        <a href="/#showcase" class="text-orange-600 hover:underline font-medium">← Retour à la galerie</a>
      </div>

      <img
        src={design.image}
        alt={design.title}
        class="w-full rounded-3xl shadow-lg mb-12"
      />

      <h1 class="text-4xl md:text-5xl font-extrabold mb-6">
        {design.title}
      </h1>

      <div class="flex items-center gap-4 mb-12">
        <img
          src={design.avatar}
          alt={design.author}
          class="w-14 h-14 rounded-full border-2 border-orange-400 object-cover"
        />
        <p class="text-lg text-gray-700">
          Conçu par <span class="font-semibold text-gray-900">{design.author}</span>
        </p>
      </div>

      <p class="text-lg leading-relaxed text-gray-700 mb-10">
        {design.description}
      </p>

      <a
        href="/gallery"
        class="inline-block px-8 py-4 bg-gradient-to-r from-orange-500 to-pink-500 text-white font-semibold rounded-full shadow-md hover:shadow-lg hover:scale-[1.05] transition-all duration-300"
      >
        Retour à la galerie →
      </a>
    </section>
  </body>
</html>
